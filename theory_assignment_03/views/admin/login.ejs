<!-- Fullscreen Background with Gradient -->
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">
    <div class="card shadow-lg p-5 rounded-5" style="max-width: 450px; background: rgba(255, 255, 255, 0.9); animation: fadeIn 1s ease;">
        <!-- Title -->
        <h2 class="text-center mb-5 text-dark font-weight-bold">Login</h2>

        <!-- Login Form -->
        <form action="/login" method="POST">
            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control form-control-lg border-0 shadow-sm rounded-3" id="email" name="email" placeholder="Enter your email" required>
                </div>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control form-control-lg border-0 shadow-sm rounded-3" id="password" name="password" placeholder="Enter your password" required>
                </div>
            </div>

            <!-- Error Alert -->
            <% if (user && user.message) { %>
                <div class="alert alert-danger mb-3 rounded-3 fade-in">
                    <%= user.message %>
                </div>
            <% } %>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 py-3 rounded-4 shadow-lg fs-5 fw-semibold mt-3 border-0">Login</button>
        </form>

        <!-- Sign-up Link -->
        <div class="text-center mt-4">
            <a href="/signup" class="text-decoration-none text-primary fw-bold">Don't have an account? Sign up here</a>
        </div>
    </div>
</div>

<!-- Optional: Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Optional: Bootstrap CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Optional: Custom CSS for Enhancements -->
<style>
    /* Fade-in Effect for Card */
    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Subtle Hover Effect for Inputs */
    .form-control:focus {
        border-color: #6a11cb !important;
        box-shadow: 0 0 10px rgba(106, 17, 203, 0.4);
        outline: none;
    }

    .form-control:hover {
        border-color: #2575fc !important;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Hover and Active Effects for Button */
    .btn-primary {
        transition: 0.3s ease;
        background: linear-gradient(to right, #6a11cb, #2575fc);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        background: linear-gradient(to right, #2575fc, #6a11cb);
    }

    /* Button Focus Effect */
    .btn-primary:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(106, 17, 203, 0.4);
    }

    /* Smooth Fade-in Alert */
    @keyframes fadeInAlert {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    /* Fade-in Animation for Error Messages */
    .fade-in {
        animation: fadeInAlert 0.5s ease;
    }

    /* Sign-up Link Hover Effect */
    .text-primary:hover {
        text-decoration: underline;
        color: #6a11cb;
    }

    /* Rounded Corners for Button and Inputs */
    .card {
        border-radius: 20px;
    }

    .btn-primary {
        border-radius: 25px;
    }

    .form-control, .input-group-text {
        border-radius: 25px;
    }

    /* Card Shadows */
    .card {
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    /* Subtle Transition for Inputs */
    .form-control {
        transition: 0.2s ease;
    }
</style>
